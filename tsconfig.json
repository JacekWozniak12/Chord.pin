{
    "compilerOptions": {       
        "lib": ["es5", "es6", "dom", "ES2015"],
        "module": "commonjs",
        "target": "es6",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "noImplicitAny": false,
        "paths": {
            "Tone": ["node_modules/tone/Tone"],
          },
    },
    "include":[
        "node_modules/tone/Tone",
        "src/ts/*", 
        "src/ts/app/app-parts.ts", 
        "src/ts/audio.ts", 
        "src/ts/definitions.ts", 
        "src/ts/gui.ts", 
        "src/ts/parser.ts", "src/ts/app/app.ts",
    ]
}