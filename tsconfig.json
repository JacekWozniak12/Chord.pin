{
    "compilerOptions": {
        "lib": [
            "dom",
            "es6"
        ],
        "module": "commonjs",
        "target": "es6",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "noImplicitAny": false,
        "paths": {
            "Tone": [
                "node_modules/tone/*"
            ],
        },
        "experimentalDecorators": true,
        "downlevelIteration": true
    },
    "include": [
        "node_modules/tone/*",
        "src/ts/*",
        "src/ts/definitions/Note.ts",
        "src/ts/definitions/Chord.ts",
        "src/ts/definitions/ChordPosition.ts",
        "src/ts/definitions/NotePosition.ts",
        "src/ts/definitions/NoteSet.ts",
        "src/ts/definitions/Options.ts",
        "src/ts/definitions/Const.ts",
        "src/ts/definitions/Tuning.ts",
        "src/ts/definitions/VariableNotifier.ts",
        "src/ts/definitions/Observer.ts",
        "src/ts/gui/GuitarString.ts",
        "src/ts/gui/Fretboard.ts",
        "src/ts/gui/SettingsDisplay.ts", 
        "src/ts/gui/GuitarStringNote.ts", 
        "src/ts/gui/GUI.ts", 
        "src/ts/parts/Parser.ts",
    ]
}