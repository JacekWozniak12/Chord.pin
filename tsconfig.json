{
    "compilerOptions": {       
        "lib": ["es5", "es6", "dom"],
        "module": "commonjs",
        "target": "es6",
        "removeComments": true,
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./",
        "paths": {
            "Tone/*": ["node_modules/tone/*"],
          }
    },
    "include":[
        "node_modules/tone/*",
        "src/ts/*", 
        "src/ts/app/app-parts.ts", 
        "src/ts/app/audio.ts", 
        "src/ts/app/definitions.ts", 
        "src/ts/app/gui.ts", 
        "src/ts/app/prompt.ts",
    ]
}